    <script src="~/Content/global/plugins/jquery/jquery-2.1.1.min.js"></script>
    <script src="~/Content/global/plugins/highcharts/highcharts.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#container").highcharts({
                //图表
                chart: {
                    //类型，面积图
                    type: "area",
                },
                //标题
                title: {
                    text: "主标题"
                },
                //副标题
                subtitle: {
                    text: ' <a href="#">副标题（带连接）</a>'
                },
                //x轴
                xAxis: {
                    //轴标签
                    labels: {
                        //格式化Y轴标签
                        formatter: function () {
                            return this.value;
                        }
                    }
                },
                //y轴
                yAxis: {
                    //标题
                    title: {
                        text: 'y轴描述'
                    },
                    //轴标签
                    labels: {
                        //格式化Y轴标签
                        formatter: function () {
                            return this.value / 1000 + 'k';
                        }
                    }
                },
                //数据提示框,当鼠标悬停在某点上时，以框的形式提示该点的数据
                tooltip: {
                    pointFormat: '{series.name}  <b>{point.y:,.0f}</b>'
                },
                //数据列配置
                plotOptions: {
                    area: {
