
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>曲线图（比折线图更平滑）</title>
    <link href="~/Content/layouts/css/theme.css" rel="stylesheet" />
    <script src="~/Content/global/plugins/jquery/jquery-2.1.1.min.js"></script>
    <script src="~/Content/global/plugins/highcharts/highcharts.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#container").highcharts({
                //图表
                chart: {
                    //类型，曲线图
                    type: "spline",
                },
                //标题
                title: {
                    text: "月平均温度",
                    //水平偏移
                    x: -20
                },
                //副标题
                subtitle: {
                    text: '来源：气象局官方数据',
                    x: -20
                },
                //x轴
                xAxis: {
                    //分类
                    categories: ['一月', '二月', '三月', '四月', '五月', '六月', '七月', '八月', '九月', '十月', '十一月', '十二月']
                },
                //y轴
                yAxis: {
                    //标题
                    title: {
                        text: '温度 (°C)'
                    },
                    //轴标签
                    labels: {
                        //格式化Y轴标签 
                        formatter: function () {
                            return this.value + '°'
                        }
                    }
                },
                //数据提示框,当鼠标悬停在某点上时，以框的形式提示该点的数据
                tooltip: {
                    crosshairs: true,
                    shared: true
                },
                //数据列配置
                plotOptions: {
                    spline: {
                        marker: {
                            radius: 4,
                            lineColor: '#666666',
                            lineWidth: 1
                        }
                    }
                },
                //数据列
                series: [{
                    name: '北京',
                    marker: {
                        symbol: 'square'
                    },
                    data: [7.0, 6.9, 9.5, 14.5, 18.2, 21.5, 25.2, {
                        y: 26.5,
                    }, 23.3, 18.3, 13.9, 9.6]

                }, {
                    name: '广州',
                    marker: {
                        symbol: 'diamond'
                    },
                    data: [{
                        y: 3.9,
                    }, 4.2, 5.7, 8.5, 11.9, 15.2, 17.0, 16.6, 14.2, 10.3, 6.6, 4.8]
                }]
            });
        });
    </script>
</head>
<body>
    <div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
</body>
</html>
